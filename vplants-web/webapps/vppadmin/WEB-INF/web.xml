<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN
" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

    <security-constraint>
      <web-resource-collection>
         <web-resource-name>
		vPlants Plus admin Tool
	 </web-resource-name>
         <url-pattern>/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
         <role-name>vplants</role-name>
      </auth-constraint>
    </security-constraint>

    <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>vPlants</realm-name>
    </login-config>

    <servlet>
      <servlet-name>Vplants-plus-admin</servlet-name>
      <servlet-class>vppadmin</servlet-class>
    </servlet>
</web-app>
